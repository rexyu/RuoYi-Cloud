FROM  openjdk:8-jdk-alpine
LABEL MAINTAINER RexYu

ENV PARAMS=" --server.port=8080 --spring.profiles.active=prod --spring.cloud.nacos.server-addr=nacos.common:8848  --spring.cloud.nacos.discovery.server-addr=nacos.common:8848 --spring.cloud.nacos.config.server-addr=nacos.common:8848 --spring.cloud.sentinel.transport.dashboard=nacos.common:8848 --spring.cloud.sentinel.datasource.ds1.nacos.server-addr=nacos.common:8848 --spring.cloud.nacos.discovery.namespace=prod --spring.cloud.nacos.config.namespace=prod -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005",
ENV DEBUGGER="-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5005"

COPY target/*.jar /app.jar
EXPOSE 8080
EXPOSE 5005

ENTRYPOINT ["/bin/sh","-c","java ${DEBUGGER} -Dfile.encoding=urf8 -Djava.security.egd=file:/dev/./urandom -jar /app.jar ${PARAMS}"]
